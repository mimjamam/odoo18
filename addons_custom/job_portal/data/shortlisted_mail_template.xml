<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Application Shortlisted -->
    <record id="mail_template_job_application_shortlisted" model="mail.template">
        <field name="name">Job Application Shortlisted Email</field>
        <field name="model_id" ref="job_portal.model_job_application"/>
        <field name="subject">Your Application has been Shortlisted!</field>
        <field name="email_to">{{ object.email }}</field>
        <field name="email_from">{{ user.email or 'noreply@company.com' }}</field>
        <field name="body_html" type="html">
            <div style="font-family: Arial, sans-serif; font-size: 14px; color: #333;">
                <p>Dear <strong><t t-out="object.applicant_name or 'Candidate'"/></strong>,</p>
                <p>
                    Congratulations! Your application for the position of 
                    <strong><t t-out="object.job_id.name"/></strong> has been shortlisted.
                </p>
                <p>
                    Our HR team will contact you shortly for the next steps in the hiring process.
                </p>
                <p>
                    Best regards,<br/>
                    <strong><t t-out="user.company_id.name or 'HR Team'"/></strong>
                </p>
            </div>
        </field>
        <field name="auto_delete" eval="True"/>
    </record>

</odoo>
