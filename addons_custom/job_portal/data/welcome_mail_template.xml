<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_job_application_thankyou" model="mail.template">
        <field name="name">Job Application Thank You Email</field>
        <field name="model_id" ref="job_portal.model_job_application"/>
        <field name="subject">Thank You for Your Application!</field>
        <field name="email_to">{{ object.email }}</field>
        <field name="email_from">{{ user.email or 'noreply@company.com' }}</field>
        <field name="body_html" type="html">
            <div style="font-family: Arial, sans-serif; font-size: 14px; color: #333;">
                <p>Dear <strong><t t-out="object.applicant_name or 'Candidate'"/></strong>,</p>

                <p>
                    Thank you for applying for the position of 
                    <strong><t t-out="object.job_id.name"/></strong>.
                </p>

                <p>
                    Your application has been submitted successfully. 
                    We will review your application and get back to you soon.
                </p>

                <p>
                    Best regards,<br/>
                    <strong><t t-out="user.company_id.name or 'HR Team'"/></strong>
                </p>
            </div>
        </field>
        <field name="auto_delete" eval="True"/>
    </record>
</odoo>
