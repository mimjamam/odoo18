<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Kanban View -->
    <record id="view_hotel_dashboard_kanban" model="ir.ui.view">
        <field name="name">hotel.dashboard.kanban</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <kanban string="Hotel Dashboard" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="guest_id"/>
                <field name="room_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="state"/>
                <field name="total_amount"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="guest_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_details">
                                        <div class="o_kanban_record_detail">
                                            <strong>Room:</strong> <field name="room_id"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Check-in:</strong> <field name="check_in"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Check-out:</strong> <field name="check_out"/>
                                        </div>
                                        <div class="o_kanban_record_detail">
                                            <strong>Amount:</strong> $<field name="total_amount"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill" t-att-class="'badge-' + (record.state.raw_value == 'draft' ? 'secondary' : record.state.raw_value == 'confirmed' ? 'primary' : record.state.raw_value == 'checked_in' ? 'success' : record.state.raw_value == 'checked_out' ? 'info' : 'danger')">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_hotel_dashboard" model="ir.actions.act_window">
        <field name="name">Hotel Dashboard</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_hotel_dashboard_kanban"/>
        <field name="context">{'search_default_confirmed': 1, 'search_default_checked_in': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to Hotel Management Dashboard!
            </p>
            <p>
                This dashboard shows your hotel bookings and key metrics.<br/>
                You can view, create, and manage bookings, rooms, and guests.
            </p>
        </field>
    </record>

    <!-- Quick Stats Action for Dashboard -->
    <record id="action_hotel_rooms_quick" model="ir.actions.act_window">
        <field name="name">Rooms Overview</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_available': 1}</field>
    </record>

    <record id="action_hotel_guests_quick" model="ir.actions.act_window">
        <field name="name">Guests Overview</field>
        <field name="res_model">hotel.guest</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <record id="action_hotel_bookings_quick" model="ir.actions.act_window">
        <field name="name">All Bookings</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
