<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_guest_tree" model="ir.ui.view">
        <field name="name">hotel.guest.tree</field>
        <field name="model">hotel.guest</field>
        <field name="arch" type="xml">
            <list string="Hotel Guests">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="id_number"/>
                <field name="booking_count"/>
            </list>
        </field>
    </record>

    <record id="view_hotel_guest_form" model="ir.ui.view">
        <field name="name">hotel.guest.form</field>
        <field name="model">hotel.guest</field>
        <field name="arch" type="xml">
            <form string="Hotel Guest">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="id_number"/>
                            <field name="active"/>
                            <field name="booking_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address">
                            <field name="address"/>
                        </page>
                        <page string="Bookings">
                            <field name="booking_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hotel_guest_search" model="ir.ui.view">
        <field name="name">hotel.guest.search</field>
        <field name="model">hotel.guest</field>
        <field name="arch" type="xml">
            <search string="Search Guests">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="id_number"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Active" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hotel_guest" model="ir.actions.act_window">
        <field name="name">Guests</field>
        <field name="res_model">hotel.guest</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
