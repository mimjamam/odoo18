<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Male patients action window -->
    <record id="action_menu_male_patient" model="ir.actions.act_window">
        <field name="name">Male Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <!-- Apply domain -->
        <field name="domain">[('gender', '=', 'male')]</field>
        <!-- Set default value using context -->
        <field name="context">{'default_gender': 'male'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new male patient.
            </p>
        </field>
    </record>

    <menuitem id="menu_male_patient"
              name="Male Patients"
              action="action_menu_male_patient"
              parent="menu_patient_master"
              sequence="2"/>
</odoo>