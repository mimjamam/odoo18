<odoo>
    <!-- List View -->
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="name" string="Patient Name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="ref"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name"
                       filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]"/>
                <field name="ref"/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <separator/>
                <filter string="Female" name="female_filter" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by': 'gender'}"/>
                </group>

                <!-- Search Panel -->
                <searchpanel>
                    <field name="gender" icon="fa-venus-mars" select="multi"/>
                    
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Patient Name"/>
                            <field name="age"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="address"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action for Patient Details -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
         <field name="context">{'search_default_male':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Patient!
            </p>
        </field>
    </record>

    <!-- Action for Patients Cards -->
    <record id="action_patient_menu" model="ir.actions.act_window">
        <field name="name">Patients Cards</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_gender':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient.
            </p>
        </field>
    </record>

    
</odoo>