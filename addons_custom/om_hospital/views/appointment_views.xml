<odoo>
    <!-- Tree View -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="appointment_date"/>
                <field name="doctor_name"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="patient_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirm" domain="[('state','=','confirm')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="cancel" domain="[('state','=','cancel')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}"/>
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'" class="btn-primary"/>
                        <button name="action_done" type="object" string="Mark Done" invisible="state != 'confirm'" class="btn-success"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft', 'confirm']" class="btn-secondary"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state not in ['cancel', 'done']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done,cancel"/>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="patient_id"/>
                            <field name="appointment_date"/>
                        </group>
                        <group>
                            <field name="doctor_name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Appointment!
            </p>
        </field>
    </record>
</odoo>


